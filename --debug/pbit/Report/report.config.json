{
  "version": "{{ version | default('1.0') }}",
  "themeCollection": {
    "baseTheme": {
      "name": "{{ theme_name | default('Default') }}",
      "version": "{{ theme_version | default('1.0') }}",
      "type": "{{ theme_type | default('Light') }}"
    }
  },
  "activeSectionIndex": {{ active_section_index | default(0) }},
  "defaultDrillFilterOtherVisuals": {{ default_drill_filter | default(true) | lower }},
  "slowDataSourceSettings": {
    "isCrossHighlightingDisabled": {{ is_cross_highlighting_disabled | default(false) | lower }},
    "isSlicerSelectionsButtonEnabled": {{ is_slicer_selections_enabled | default(true) | lower }},
    "isFilterSelectionsButtonEnabled": {{ is_filter_selections_enabled | default(true) | lower }},
    "isFieldWellButtonEnabled": {{ is_field_well_enabled | default(true) | lower }},
    "isApplyAllButtonEnabled": {{ is_apply_all_enabled | default(true) | lower }}
  },
  "settings": {
    "useNewFilterPaneExperience": {{ use_new_filter_pane | default(true) | lower }},
    "allowChangeFilterTypes": {{ allow_change_filter_types | default(true) | lower }},
    "useEnhancedTooltips": {{ use_enhanced_tooltips | default(true) | lower }}
  }
}
